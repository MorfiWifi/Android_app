<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/costumer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="56dp"
        android:theme="@style/BaseTheme_Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewc"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tx_viewnamecostumer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="right"
                android:textSize="20sp"
                android:text="نام مشتری:"
                />
            <EditText
                android:id="@+id/etx_namecostumer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"

                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/tx_namecostumercostum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:gravity="right"
                android:padding="3dp"
                android:textSize="20sp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/tx_viewcompanynamecostum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="right"
                android:textSize="20sp"
                android:text="نام شرکت:"
                />
            <EditText
                android:id="@+id/etx_companynamecostum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/tx_companynamecostum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tx_viewphoneNumbercostom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="right"
                android:textSize="20sp"
                android:text="تلفن:"/>

            <EditText
                android:id="@+id/etx_PhoneNumbercostum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:enabled="true"
                android:inputType="number"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/tx_PhoneNumbercostum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:textSize="20sp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/tx_viewallproductcostum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:text="همه ی محصولات:"/>
            <TextView
                android:id="@+id/tx_allproductcostum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="110dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tx_viewallpricecustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="right"
                android:textSize="20sp"
                android:text="قیمت همه ی محصولات:"/>

            <TextView
                android:id="@+id/tx_allpricecustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="110dp"
                android:textSize="20sp" />
            <Button
                android:id="@+id/button_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="لیست محصولات تولید کننده" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
