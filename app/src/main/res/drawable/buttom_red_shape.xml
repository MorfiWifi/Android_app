<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="0dp"
                />
            <gradient
                android:angle="90"
                android:centerX="9%"
                android:centerColor="#D4D439"
                android:startColor="#D4D439"
                android:endColor="#D4D439"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />



        </shape>

    </item>
    <item >
        <shape>
            <corners
                android:radius="0dp"
                />
            <gradient
                android:angle="90"
                android:centerX="9%"
                android:centerColor="#152DCF"
                android:startColor="#152DCF"
                android:endColor="#152DCF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />



        </shape>

    </item>




</selector>

